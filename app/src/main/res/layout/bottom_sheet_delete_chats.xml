<LinearLayout
    android:layout_gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_bottom_sheet_chat_back"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/li"
        android:layout_marginBottom="@dimen/_20sdp"

        android:layout_marginTop="@dimen/_18sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">



                <TextView
                    android:textAlignment="center"
                    android:textSize="@dimen/_12ssp"
                    style="@style/sty_tv_med_14"

                    android:layout_gravity="center"

                    android:layout_weight="1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select an action" />

                <!-- ImageView -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ca_cancel_dialog"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="@dimen/_2sdp"
                        app:tint="@color/icons_color"
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/ic_chat_cancel_grey" />

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginVertical="@dimen/_11sdp"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">



                    <TextView
                        android:textColor="#FF0000"
                        android:textSize="@dimen/_10ssp"
                        style="@style/sty_regular_16"

                        android:layout_gravity="center_vertical"

                        android:layout_weight="1"
                        android:id="@+id/tv_settingtxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Delete 2 Chats" />

                    <!-- ImageView -->
                    <ImageView

                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/ic_chat_delete_icon" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</LinearLayout>






